<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="jni_tokenizer" class="cdeler.highlight.token.JNITokenizer">
        <constructor-arg name="manager" ref="settings_manager"/>
    </bean>

    <bean id="highlighter" class="cdeler.highlight.highlighters.StyleTextHighlighter">
        <constructor-arg name="tokenizer" ref="jni_tokenizer"/>
        <constructor-arg name="settingManager" ref="settings_manager"/>
    </bean>

    <bean id="main_application" class="cdeler.ide.Ide">
        <constructor-arg name="windowWidth" value="800"/>
        <constructor-arg name="windowHeight" value="600"/>
        <constructor-arg name="iconPath" value="/icons8-ruby-programming-language-64.png"/>
        <constructor-arg name="windowTitle" value="Ruby Pit"/>
        <constructor-arg name="highlighter" ref="highlighter"/>
        <constructor-arg name="uiSettingsManager" ref="settings_manager"/>
    </bean>

    <bean id="settings_manager" class="cdeler.highlight.settings.UISettingsManager">
        <constructor-arg name="defaultSettings">
            <bean class="cdeler.highlight.settings.UISettings">
                <constructor-arg name="name" value="default"/>
                <constructor-arg name="fontName" value="iosevka-regular"/>
                <constructor-arg name="fontSize" value="20"/>
                <constructor-arg name="tokenStyle">
                    <map>
                        <entry key="symbol">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#C74FFF"/>
                            </bean>
                        </entry>
                        <entry key="string">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#35FF9F"/>
                            </bean>
                        </entry>
                        <entry key="constant">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#CC8F16"/>
                                <constructor-arg name="italic" value="false"/>
                                <constructor-arg name="bold" value="true"/>
                            </bean>
                        </entry>
                        <entry key="comment">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#CCCCCC"/>
                                <constructor-arg name="italic" value="true"/>
                                <constructor-arg name="bold" value="false"/>
                            </bean>
                        </entry>
                    </map>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg name="highlightedTokens">
            <list>
                <bean class="cdeler.highlight.token.TokenType" factory-method="valueOf">
                    <constructor-arg value="string"/>
                </bean>
                <bean class="cdeler.highlight.token.TokenType" factory-method="valueOf">
                    <constructor-arg value="symbol"/>
                </bean>
                <bean class="cdeler.highlight.token.TokenType" factory-method="valueOf">
                    <constructor-arg value="constant"/>
                </bean>
                <bean class="cdeler.highlight.token.TokenType" factory-method="valueOf">
                    <constructor-arg value="comment"/>
                </bean>
            </list>
        </constructor-arg>
    </bean>

</beans>