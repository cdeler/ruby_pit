<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="app.properties"/>
    </bean>

    <bean id="jni_tokenizer" class="cdeler.highlight.token.JNITokenizer">
        <constructor-arg name="manager" ref="settings_manager"/>
    </bean>

    <bean id="highlighter" class="cdeler.highlight.highlighters.StyleTextHighlighter">
        <constructor-arg name="tokenizer" ref="jni_tokenizer"/>
        <constructor-arg name="settingManager" ref="settings_manager"/>
    </bean>

    <bean id="io_events_handler" class="cdeler.ide.IOEventsManager">
        <constructor-arg name="manager">
            <bean class="cdeler.core.io.InMemoryFileManager"/>
        </constructor-arg>
        <constructor-arg name="ide" ref="ide_window"/>
        <constructor-arg name="settingsManager" ref="settings_manager"/>
    </bean>

    <bean id="ui_events_handler" class="cdeler.ide.UIEventsManager">
        <constructor-arg name="ide" ref="ide_window"/>
        <constructor-arg name="highlighter" ref="highlighter"/>
        <constructor-arg name="settingsManager" ref="settings_manager"/>
    </bean>

    <bean id="ide_window" class="cdeler.ide.Ide">
        <constructor-arg name="windowWidth" value="800"/>
        <constructor-arg name="windowHeight" value="600"/>
        <constructor-arg name="iconPath" value="/icons8-ruby-programming-language-64.png"/>
        <constructor-arg name="settingsManager" ref="settings_manager"/>
    </bean>

    <bean id="settings_manager" class="cdeler.highlight.settings.UISettingsManager">
        <constructor-arg name="defaultSettings">
            <bean class="cdeler.highlight.settings.UISettings">
                <constructor-arg name="name" value="default_theme"/>
                <constructor-arg name="fontName" value="iosevka-regular"/>
                <constructor-arg name="fontSize" value="20"/>
                <constructor-arg name="backgroundColor" value="#FDF6E3"/>
                <constructor-arg name="lineNumberColor" value="#1F4662"/>
                <constructor-arg name="defaultFontSettings">
                    <bean class="cdeler.highlight.settings.TokenStyle">
                        <constructor-arg name="color" value="#657b83"/>
                    </bean>
                </constructor-arg>
                <constructor-arg name="tokenStyle">
                    <map>
                        <entry key="symbol">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#859900"/>
                            </bean>
                        </entry>
                        <entry key="string">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#2AA198"/>
                            </bean>
                        </entry>
                        <entry key="constant">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#CB4B16"/>
                                <constructor-arg name="italic" value="false"/>
                                <constructor-arg name="bold" value="true"/>
                            </bean>
                        </entry>
                        <entry key="comment">
                            <bean class="cdeler.highlight.settings.TokenStyle">
                                <constructor-arg name="color" value="#93A1A1"/>
                                <constructor-arg name="italic" value="true"/>
                                <constructor-arg name="bold" value="false"/>
                            </bean>
                        </entry>
                    </map>
                </constructor-arg>
            </bean>
        </constructor-arg>
        <constructor-arg name="ideTitle" value="${ide.default_ide_title}"/>
    </bean>

</beans>