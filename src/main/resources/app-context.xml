<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="jni_tokenizer" class="cdeler.highlight.JNITokenizer"/>

    <bean id="highlighter" class="cdeler.highlight.TextAreaHighlighter">
        <constructor-arg index="0" ref="jni_tokenizer"/>
        <constructor-arg index="1" ref="settings_manager"/>
    </bean>

    <bean id="main_application" class="cdeler.ide.Ide">
        <constructor-arg index="0" value="800"/>
        <constructor-arg index="1" value="600"/>
        <constructor-arg index="2" value="/icons8-ruby-programming-language-64.png"/>
        <constructor-arg index="3" value="Ruby Pit"/>
        <constructor-arg index="4" ref="highlighter"/>
        <constructor-arg index="5" ref="settings_manager"/>
    </bean>

    <bean id="settings_manager" class="cdeler.highlight.settings.UISettingsManager" scope="singleton">
        <constructor-arg index="0" value="settings"/>
    </bean>

</beans>